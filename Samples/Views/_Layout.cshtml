<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - DDDN.Office.ODT.Samples</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="@ViewData["Description"]" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<style>
		@Html.Raw(WebUtility.HtmlDecode((string)ViewData["ArticleCss"]))
	</style>
</head>
<body>

	<div class="wrapper">
		<header role="banner">
			<nav class="container">
				<ul>
					<li><a asp-controller="Home" asp-action="Index">DDDN.Office.ODT.Samples</a></li>
				</ul>
			</nav>
		</header>

		<main class="container">
			<h1>@ViewData["Title"]</h1>
			@RenderBody()
		</main>
	</div>

	<footer>
		<div class="container">
			<span>&copy; @DateTime.Now.Year - DDDN.Office.ODT.Samples</span>
		</div>
	</footer>

	<script src="~/js/site.js" asp-append-version="true"></script>

	@RenderSection("scripts", required: false)
</body>
</html>
